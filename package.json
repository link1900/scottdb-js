{
  "name": "scottdb-js",
  "version": "1.0.0",
  "description": "Mono repo for a typescript libs",
  "main": "index.js",
  "repository": "git@github.com:link1900/scottdb.git",
  "author": "Scott Brown <link1900@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna init && lerna bootstrap",
    "prettier": "prettier --write ./packages/*/src/**/*.ts",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "build": "lerna run build",
    "lerna:publish": "lerna publish from-git",
    "lerna:version": "lerna version --message \"chore(release): publish\"",
    "release": "yarn lint && yarn test && yarn build && yarn lerna:version && yarn lerna:publish",
    "cz": "git-cz",
    "cz:retry": "git-cz --retry",
    "script": "ts-node",
    "gen:package": "hygen package new"
  },
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@types/jest": "24.0.11",
    "commitizen": "3.0.7",
    "commitlint": "7.5.2",
    "conventional-changelog-angular-bitbucket": "1.2.0",
    "cz-conventional-changelog": "2.1.0",
    "husky": "1.3.1",
    "hygen": "4.0.2",
    "jest": "24.7.1",
    "lerna": "3.18.3",
    "lint-staged": "9.4.2",
    "mermaid.cli": "0.5.1",
    "prettier": "1.17.0",
    "ts-jest": "24.0.2",
    "ts-node": "8.0.3",
    "typescript": "3.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
